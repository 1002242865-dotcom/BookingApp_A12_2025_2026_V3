@model BookingApp_A12_2025_2026.Models.Client
@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background: #f8f9fa;
        }

        .signup-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .signup-box {
            width: 100%;
            max-width: 520px;
            background: white;
            border-radius: 1rem;
            padding: 2.5rem;
            box-shadow: 0 0 35px rgba(0, 0, 0, 0.12);
        }
    </style>
</head>

<body>

    <div class="signup-container">
        <div class="signup-box">

            <h2 class="text-center mb-4">
                <i class="fas fa-user-plus me-2"></i>
                إنشاء حساب جديد
            </h2>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="DoSignUp" asp-controller="Home" method="post" enctype="multipart/form-data">

                <!-- الاسم الكامل -->
                <div class="mb-3">
                    <label asp-for="Client_Name" class="form-label">الاسم الكامل</label>
                    <input asp-for="Client_Name" class="form-control form-control-lg" placeholder="اكتب اسمك الكامل" required/>
                    <span asp-validation-for="Client_Name" class="text-danger"></span>
                </div>

                <!-- البريد -->
                <div class="mb-3">
                    <label asp-for="Client_Username" class="form-label">اسم المستخدم</label>
                    <input asp-for="Client_Username" class="form-control form-control-lg" placeholder="example@mail.com" required/>
                    <span asp-validation-for="Client_Username" class="text-danger"></span>
                </div>

                <!-- كلمة المرور -->
                <div class="mb-3">
                    <label asp-for="Client_Password" class="form-label">كلمة المرور</label>
                    <input asp-for="Client_Password" type="password" class="form-control form-control-lg" placeholder="••••••••" required />
                    <span asp-validation-for="Client_Password" class="text-danger"></span>
                </div>

                <!-- تاريخ الميلاد -->
                <div class="mb-3">
                    <label asp-for="Client_Birthdate" class="form-label">تاريخ الميلاد</label>
                    <input asp-for="Client_Birthdate" type="date" class="form-control form-control-lg" required />
                    <span asp-validation-for="Client_Birthdate" class="text-danger"></span>
                </div>

                <!-- صورة -->
                <div class="mb-4">
                    <label asp-for="Client_Photo" class="form-label">صورة</label>
                    <input name="Client_Photo_File" type="file" accept="image/*" class="form-control form-control-lg" />
                    <span asp-validation-for="Client_Photo" class="text-danger"></span>
                </div>

                <!-- زر تسجيل -->
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-user-check me-2"></i>
                    تسجيل الحساب
                </button>

                <div class="text-center mt-3">
                    <a href="/Home/LoginView" class="text-decoration-none">
                        لديك حساب؟ <span class="text-primary">تسجيل الدخول</span>
                    </a>
                </div>

            </form>
        </div>
    </div>

</body>
</html>
