@model BookingApp_A12_2025_2026.Models.Client
@{
    Layout = null;
}
@{
    ViewData["Title"] = "تسجيل دخول العميل";
    Layout = null; // استخدام صفحة بدون Layout
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            overflow-x: hidden; /* منع التمرير الأفقي */
        }

        .login-container {
            min-height: 100vh; /* جعل الحاوية تملأ الشاشة */
        }

        /* --- القسم الأيمن (البراند) --- */
        .branding-half {
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%); /* تدرج أزرق أنيق */
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 4rem;
        }

            .branding-half h1 {
                font-weight: 700;
                font-size: 2.5rem;
            }

            .branding-half p {
                font-size: 1.1rem;
                opacity: 0.9;
            }

            .branding-half .icon {
                font-size: 5rem;
                margin-bottom: 1.5rem;
                opacity: 0.8;
            }

        /* --- القسم الأيسر (النموذج) --- */
        .form-half {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 4rem 1rem; /* مساحة على الشاشات الصغيرة */
            background-color: #f8f9fa; /* خلفية رمادية فاتحة جداً */
        }

        .form-container {
            width: 100%;
            max-width: 450px;
        }

            .form-container h2 {
                font-weight: 700;
                color: #333;
                margin-bottom: 1rem;
            }

            .form-container .form-text {
                color: #6c757d; /* لون Bootstrap القياسي muted */
                margin-bottom: 2rem;
            }

        .form-label {
            font-weight: 600;
        }

        .form-control-lg {
            border-radius: 0.5rem; /* حواف دائرية أكبر */
            padding: 0.75rem 1rem;
        }

        .btn-login {
            font-weight: 700;
            padding: 0.75rem;
            border-radius: 0.5rem;
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-login:hover {
                background-color: #0a58ca;
                border-color: #0a58ca;
            }

        

        .form-half {
            background: linear-gradient(180deg, #f0f4f8 0%, #ffffff 100%);
        }

        }
    </style>
</head>
<body>

    <div class="container-fluid login-container p-0">
        <div class="row g-0">

            <div class="col-md-6 branding-half">
                <i class="fas fa-user-shield icon"></i>
                <h1>أهلاً بعودتك</h1>
                <p>قم بتسجيل الدخول للوصول إلى لوحة التحكم الخاصة بك وإدارة جميع خدماتك بسهولة وأمان.</p>

            </div>

            <div classS="col-md-6 form-half">
                <div class="form-container">

                    <h2>تسجيل الدخول</h2>
                    <p class="form-text">يرجى إدخال بيانات حسابك للمتابعة.</p>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form method="post" asp-controller="Client" asp-action="CheckLogin">

                        <div class="mb-3">
                            <label for="usernameInput" class="form-label">البريد الإلكتروني</label>
                            <input type="text"
                                   class="form-control form-control-lg"
                                   id="usernameInput"
                                   placeholder="example@company.com"
                                   name="Client_Username" required>
                        </div>

                        <div class="mb-4">
                            <label for="passwordInput" class="form-label">كلمة المرور</label>
                            <input type="password"
                                   class="form-control form-control-lg"
                                   id="passwordInput"
                                   placeholder="••••••••"
                                   name="Client_Password" required>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">
                                    تذكرني
                                </label>
                            </div>
                            <a href="#" class="text-decoration-none text-primary">هل نسيت كلمة المرور؟</a>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 btn-login">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            تسجيل الدخول
                        </button>

                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>